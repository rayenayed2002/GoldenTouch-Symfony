  <body>
    <div class="authentication-wrapper authentication-cover authentication-bg">
      <div class="authentication-inner row">
        <!-- Left Panel with Branding -->
        <div class="d-none d-lg-flex col-lg-7 p-0">
          <div class="auth-cover-bg d-flex justify-content-center align-items-center">
            <img src="{{ asset('logo.jpeg') }}" alt="logo" />
          </div>
        </div>

        <!-- Right Panel with Form -->
        <div class="d-flex col-12 col-lg-5 align-items-center p-sm-5 p-4">
          <div class="w-px-400 mx-auto">
            <div class="app-brand mb-4">
              <a href="#" class="app-brand-link gap-2">
                <span class="app-brand-logo demo">
                  <!-- SVG Logo -->
                </span>
              </a>
            </div>                    

            <h3 class="mb-1 fw-bold">Réinitialiser mon mot de passe</h3>
            <p class="mb-4">Veuillez entrer votre nouveau mot de passe</p>

            <!-- Flash Messages -->
            {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} alert-elevated fade show" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'info-circle' }} me-2"></i>
                    <div>
                        {% for message in messages %}
                        <p class="mb-0">{{ message | raw }}</p>
                        {% endfor %}
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {% endfor %}

            <!-- Reset Password Form -->
            {{ form_start(resetForm) }}
              <div class="mb-3">
                <label for="new-password" class="form-label">Nouveau mot de passe</label>
                <div class="input-group input-group-merge">
                  <span class="input-group-text"><i class="ti ti-lock"></i></span>
                  {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                      'class': 'form-control',
                      'placeholder': 'Entrez votre nouveau mot de passe',
                      'id': 'new-password'
                    }
                  }) }}
                </div>
                {{ form_errors(resetForm.plainPassword.first) }}
              </div>
              
              <div class="mb-3">
                <label for="confirm-password" class="form-label">Confirmer le mot de passe</label>
                <div class="input-group input-group-merge">
                  <span class="input-group-text"><i class="ti ti-lock"></i></span>
                  {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                      'class': 'form-control',
                      'placeholder': 'Confirmez votre nouveau mot de passe',
                      'id': 'confirm-password'
                    }
                  }) }}
                </div>
                {{ form_errors(resetForm.plainPassword.second) }}
              </div>

              <button type="submit" class="btn btn-primary d-grid w-100 btn-arrow">
                Réinitialiser mon mot de passe
                <i class="fas fa-key ms-2"></i>
              </button>
            {{ form_end(resetForm) }}
            
            <p class="text-center mt-4">
              <a href="{{ path('login') }}" class="d-flex align-items-center justify-content-center">
                <i class="ti ti-chevron-left me-2"></i>
                Retour à la connexion
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>

