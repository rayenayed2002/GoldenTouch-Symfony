                `);
                
                             // Fetch images from server
                $.ajax({
                    url: '{{ path('admin_pack_list_files') }}',
                    type: 'GET',
                    data: {
                        path: 'uploads/packs/Images'
                    },
                    success: function(response) {
                        console.log('Server response:', response); // Debug response
