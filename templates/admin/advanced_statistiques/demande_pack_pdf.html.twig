        status == 'EN_ATTENTE' ? 'badge-warning' :
        (status == 'EN_PERSONNALISATION' ? 'badge-info' :
        (status == 'EN_ATTENTE_PAIEMENT' ? 'badge-primary' :
        (status in ['CONFIRME','CONFIRM√â'] ? 'badge-success' :
        (status == 'ANNULE' ? 'badge-danger' : 'badge-secondary'))))
