        <div class="divider-gradient"></div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Utilisateur</th>
                    <th>Pack</th>
                    <th>Event</th>
                    <th>Statut</th>
                    <th>Date Demande</th>
                    <th>Prix</th>
                </tr>
            </thead>
            <tbody>
                {% for demande in demandes %}
                <tr>
                    <td>{{ demande.id }}</td>
                    <td>
                        {% if demande.user %}
                            {{ demande.user.nom }} {{ demande.user.prenom }}<br>
                            <small>{{ demande.user.email }}</small>
                        {% else %}
                            <em>N/A</em>
                        {% endif %}
                    </td>
                    <td>{{ demande.pack ? demande.pack.nom : '-' }}</td>
                    <td>{{ demande.event ? demande.event.nom : '-' }}</td>
