        'EN_ATTENTE': 'En attente',
        'EN_PERSONNALISATION': 'En personnalisation',
        'EN_ATTENTE_PAIEMENT': 'En attente paiement',
        'CONFIRME': 'Confirm√©',
        'CONFIRM√â': 'Confirm√©',
        'ANNULE': 'Annul√©',
    }[status] ?? status|capitalize %}
