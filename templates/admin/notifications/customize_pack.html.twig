  <script>
document.addEventListener('DOMContentLoaded', function() {
    // Variables for section navigation
    const sections = document.querySelectorAll('.form-section');
    const steps = document.querySelectorAll('.step');
    let currentSection = 1;
    let selectedMaterielles = new Map();
    let selectedPersonnel = new Map();
    let selectedLocation = null;

    // Function to update sections and steps
    function updateSections(newSection) {
        // Update sections
        sections.forEach(section => section.classList.remove('active'));
        document.getElementById(`section${newSection}`).classList.add('active');

        // Update steps
        steps.forEach(step => {
            const stepNum = parseInt(step.dataset.step);
            step.classList.remove('active', 'completed');
            if (stepNum < newSection) {
                step.classList.add('completed');
            } else if (stepNum === newSection) {
                step.classList.add('active');
            }
        });

        // Update current section
        currentSection = newSection;

        // Scroll to top of the new section
        document.getElementById(`section${newSection}`).scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // Next button click handler
    document.querySelectorAll('.next-section').forEach(button => {
        button.addEventListener('click', () => {
            if (currentSection < 4) {
                // Validate current section before moving to next
                if (validateSection(currentSection)) {
                    updateSections(currentSection + 1);
                }
            }
        });
    });

    // Previous button click handler
    document.querySelectorAll('.prev-section').forEach(button => {
        button.addEventListener('click', () => {
            if (currentSection > 1) {
                updateSections(currentSection - 1);
            }
        });
    });

    // Section toggle functionality
    document.querySelectorAll('.toggle-section').forEach(button => {
        button.addEventListener('click', function() {
            const targetId = this.dataset.target;
            const targetSection = document.getElementById(targetId);
            const icon = this.querySelector('i');
            
            if (targetSection.style.display === 'none') {
                targetSection.style.display = 'block';
                icon.classList.remove('ti-chevron-up');
                icon.classList.add('ti-chevron-down');
                this.classList.remove('collapsed');
            } else {
                targetSection.style.display = 'none';
                icon.classList.remove('ti-chevron-down');
                icon.classList.add('ti-chevron-up');
                this.classList.add('collapsed');
            }
        });
    });

    // Section validation
    function validateSection(sectionNumber) {
        if (sectionNumber === 4) {
            // Check if at least one type of item is selected
            if (selectedMaterielles.size === 0 && !selectedLocation && selectedPersonnel.size === 0) {
                showToast('warning', 'Attention', 'Veuillez sélectionner au moins un élément (Matériel, Emplacement ou Personnel)');
                return false;
            }
            return true;
        }
        return true; // Allow proceeding through other sections without validation
    }

    // Helper function to show toast messages
    function showToast(icon, title, text) {
        Swal.fire({
            icon: icon,
            title: title,
            text: text,
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            customClass: {
                popup: 'colored-toast'
            }
        });
    }

    // Handle materielle selection
    document.querySelectorAll('.select-materiel').forEach(button => {
        button.addEventListener('click', function() {
            const card = this.closest('.card');
            const id = this.dataset.id;
            const name = this.dataset.name;
            const price = parseFloat(this.dataset.price);
            const available = parseInt(this.dataset.available);
            const quantityInput = card.querySelector('.quantity-input');
            let quantity = parseInt(quantityInput.value) || 1;

            if (quantity < 1 || quantity > available) {
                showToast('warning', 'Attention', `Quantité invalide. Maximum disponible: ${available}`);
                return;
            }

                selectedMaterielles.set(id, {
                    id: id,
                    name: name,
                    price: price,
                    quantity: quantity,
                    maxAvailable: available
                });

            updateMaterielleTable();
            calculateTotal();
            showToast('success', 'Succès', `${quantity} ${name} ajouté(s)`);
        });
    });

    // Handle location selection
    document.querySelectorAll('.select-location').forEach(button => {
        button.addEventListener('click', function() {
            const id = this.dataset.id;
            const name = this.dataset.name;
            const price = parseFloat(this.dataset.price);

            selectedLocation = {
                id: id,
                name: name,
                price: price
            };

            updateLocationTable();
            calculateTotal();
            showToast('success', 'Succès', `Emplacement ${name} sélectionné`);
        });
    });

    // Handle personnel selection
    document.querySelectorAll('.select-personnel').forEach(button => {
        button.addEventListener('click', function() {
            const id = this.dataset.id;
            const name = this.dataset.name;
            const service = this.dataset.service;
            const price = parseFloat(this.dataset.price);

            if (selectedPersonnel.has(id)) {
                showToast('warning', 'Attention', 'Ce personnel est déjà sélectionné');
                return;
            }

            selectedPersonnel.set(id, {
                id: id,
                name: name,
                service: service,
                price: price
            });

            updatePersonnelTable();
            calculateTotal();
            showToast('success', 'Succès', `${name} sélectionné`);
        });
    });

    // Function to update materielles table
    function updateMaterielleTable() {
        const tbody = document.getElementById('selectedMaterielsTable').querySelector('tbody');
        tbody.innerHTML = '';
        
        selectedMaterielles.forEach((item) => {
            const row = document.createElement('tr');
            const total = item.price * item.quantity;
            
            row.innerHTML = `
                <td>${item.name}</td>
                <td>${item.quantity}</td>
                <td>${item.price}€</td>
                <td>${total}€</td>
                <td>
                    <button class="btn btn-sm btn-danger remove-materiel" data-id="${item.id}">
                        <i class="ti ti-trash"></i>
                    </button>
                </td>
            `;
            
            tbody.appendChild(row);
        });

        // Update summary table
        updateSummaryTables();
    }

    // Function to update location table
function updateLocationTable() {
        const tbody = document.getElementById('selectedLocationTable').querySelector('tbody');
    tbody.innerHTML = '';

        if (selectedLocation) {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${selectedLocation.name}</td>
                <td>${selectedLocation.price}€</td>
                <td>
                    <button class="btn btn-sm btn-danger remove-location">
                        <i class="ti ti-trash"></i>
                    </button>
                </td>
            `;
            tbody.appendChild(row);
        }

        // Update summary table
        updateSummaryTables();
    }

    // Function to update personnel table
    function updatePersonnelTable() {
        const tbody = document.getElementById('selectedPersonnelTable').querySelector('tbody');
        tbody.innerHTML = '';
        
        selectedPersonnel.forEach((person) => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${person.name}</td>
                <td>${person.service}</td>
                <td>${person.price}€</td>
                <td>
                    <button class="btn btn-sm btn-danger remove-personnel" data-id="${person.id}">
                <i class="ti ti-trash"></i>
            </button>
        </td>
    `;
            tbody.appendChild(row);
        });

        // Update summary table
        updateSummaryTables();
    }

    // Function to update summary tables
    function updateSummaryTables() {
        // Update Materials Summary
        const materielsBody = document.getElementById('summaryMaterielsTable').querySelector('tbody');
        materielsBody.innerHTML = '';
        let totalMateriels = 0;

        selectedMaterielles.forEach((item) => {
            const total = item.price * item.quantity;
            totalMateriels += total;
            
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${item.name}</td>
                <td>${item.quantity}</td>
                <td>${item.price}€</td>
                <td>${total}€</td>
            `;
            materielsBody.appendChild(row);
        });
        document.getElementById('totalMateriels').textContent = `${totalMateriels}€`;

        // Update Location Summary
        const locationBody = document.getElementById('summaryLocationTable').querySelector('tbody');
        locationBody.innerHTML = '';
        
    if (selectedLocation) {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${selectedLocation.name}</td>
                <td>${selectedLocation.price}€</td>
            `;
            locationBody.appendChild(row);
        }

        // Update Personnel Summary
        const personnelBody = document.getElementById('summaryPersonnelTable').querySelector('tbody');
        personnelBody.innerHTML = '';
        let totalPersonnel = 0;

        selectedPersonnel.forEach((person) => {
            totalPersonnel += person.price;
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${person.name}</td>
                <td>${person.service}</td>
                <td>${person.price}€</td>
            `;
            personnelBody.appendChild(row);
        });
        document.getElementById('totalPersonnel').textContent = `${totalPersonnel}€`;

        // Update Total Price
        const totalPrice = totalMateriels + (selectedLocation ? selectedLocation.price : 0) + totalPersonnel;
        document.getElementById('totalPrice').textContent = `${totalPrice}€`;
    }

    // Remove item handlers
    document.addEventListener('click', function(e) {
        if (e.target.closest('.remove-materiel')) {
            const id = e.target.closest('.remove-materiel').dataset.id;
            selectedMaterielles.delete(id);
            updateMaterielleTable();
        } else if (e.target.closest('.remove-location')) {
    selectedLocation = null;
            updateLocationTable();
        } else if (e.target.closest('.remove-personnel')) {
            const id = e.target.closest('.remove-personnel').dataset.id;
            selectedPersonnel.delete(id);
            updatePersonnelTable();
        }
    });

    // Save customization
    document.getElementById('saveCustomization').addEventListener('click', function() {
        if (!validateSection(4)) {
            return;
        }

        const formData = {
            materielles: Array.from(selectedMaterielles.values()),
            location: selectedLocation,
            personnel: Array.from(selectedPersonnel.values())
        };

        // Show loading state
        const button = this;
        const originalText = button.innerHTML;
        button.innerHTML = '<i class="ti ti-loader-2 ti-spin"></i> Enregistrement...';
        button.disabled = true;

        fetch('{{ path("admin_customize_pack_update", {id: demandePack.id}) }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrf_token("customize_pack") }}'
            },
            body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Succès !',
                    text: 'Pack customisé avec succès !',
                    showConfirmButton: false,
                    timer: 2000
                }).then(() => {
                    window.location.href = '{{ path("admin_notifications") }}';
                });
            } else {
                throw new Error(data.message || 'Erreur lors de la customisation');
            }
        })
        .catch(error => {
            Swal.fire({
                icon: 'error',
                title: 'Erreur !',
                text: error.message || 'Une erreur est survenue',
                confirmButtonText: 'OK'
            });
        })
        .finally(() => {
            button.innerHTML = originalText;
            button.disabled = false;
        });
    });

    // Initialize first section
    updateSections(1);
});
</script>
