{% extends 'base.html.twig' %}

{% block title %}Statistiques des locations{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Statistiques des locations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Statistiques globales -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h6 class="card-title">Aperçu global</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6 mb-3">
                                            <div class="card bg-label-primary">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <h6 class="mb-0">Total lieux</h6>
                                                    </div>
                                                    <h3 class="mb-2 mt-2">{{ locationStats.total_locations }}</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <div class="card bg-label-success">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <h6 class="mb-0">Capacité totale</h6>
                                                    </div>
                                                    <h3 class="mb-2 mt-2">{{ locationStats.total_capacity }}</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-label-info">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <h6 class="mb-0">Prix moyen</h6>
                                                    </div>
                                                    <h3 class="mb-2 mt-2">{{ locationStats.avg_price|number_format(2) }} €</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-label-warning">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <h6 class="mb-0">Lieux ce mois</h6>
                                                    </div>
                                                    <p class="display-6 fw-bold text-primary">{{ lieuxCeMois }}</p>
                                                    {% if mostReservedLieuThisMonth %}
                                                        <p class="fw-bold text-success mb-0">Le plus réservé : {{ mostReservedLieuThisMonth.name }}</p>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Répartition par catégorie -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between">
                                    <h6 class="card-title">Répartition par catégorie</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="categoryChart" height="250"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Réservations mensuelles -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between">
                                    <h6 class="card-title">Réservations mensuelles</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="reservationsChart" height="250"></canvas>
                                </div>
                            </div>
                        </div>
                        <!-- Revenus mensuels -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between">
                                    <h6 class="card-title">Revenus mensuels</h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="revenueChart" height="250"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Lieux les plus populaires -->
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <h6 class="card-title">Top 5 des lieux les plus populaires</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Lieu</th>
                                                    <th>Réservations</th>
                                                    <th>Taux d'occupation</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for lieu in topLieux %}
                                                <tr>
                                                    <td>{{ lieu.name }}</td>
                                                    <td>{{ lieu.reservations }}</td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="progress w-100 me-3" style="height: 8px;">
                                                                <div class="progress-bar bg-primary" role="progressbar" style="width: {{ lieu.occupancy }}%;" aria-valuenow="{{ lieu.occupancy }}" aria-valuemin="0" aria-valuemax="100"></div>
                                                            </div>
                                                            <span>{{ lieu.occupancy }}%</span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Lieux les plus chers -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between">
                                    <h6 class="card-title">Top 5 des lieux les plus chers</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Lieu</th>
                                                    <th>Prix</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for lieu in locationStats.most_expensive %}
                                                <tr>
                                                    <td>{{ lieu.name }}</td>
                                                    <td>{{ lieu.price|number_format(2) }} €</td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Chart colors
    const colors = {
        primary: '#7367f0',
        success: '#28c76f',
        danger: '#ea5455',
        warning: '#ff9f43',
        info: '#00cfe8',
        dark: '#1e1e1e'
    };

    // Category Distribution Chart
    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    const categoryChart = new Chart(categoryCtx, {
        type: 'doughnut',
        data: {
            labels: {{ categoryDistribution|map(item => item.category)|json_encode|raw }},
            datasets: [{
                data: {{ categoryDistribution|map(item => item.count)|json_encode|raw }},
                backgroundColor: [
                    colors.primary,
                    colors.success,
                    colors.danger,
                    colors.warning,
                    colors.info
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'right'
                }
            }
        }
    });

    // Reservations Chart
    const reservationsCtx = document.getElementById('reservationsChart').getContext('2d');
    const reservationsChart = new Chart(reservationsCtx, {
        type: 'bar',
        data: {
            labels: {{ monthlyReservations|map(item => item.month)|json_encode|raw }},
            datasets: [{
                label: 'Réservations',
                data: {{ monthlyReservations|map(item => item.total)|json_encode|raw }},
                backgroundColor: colors.primary,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        precision: 0
                    }
                }
            }
        }
    });

    // Revenue Chart
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    const revenueChart = new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: {{ monthlyRevenue|map(item => item.month)|json_encode|raw }},
            datasets: [{
                label: 'Revenus (€)',
                data: {{ monthlyRevenue|map(item => item.revenue)|json_encode|raw }},
                backgroundColor: 'rgba(115, 103, 240, 0.1)',
                borderColor: colors.primary,
                borderWidth: 2,
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Function to update charts with fresh data
   

    // Update charts every 30 seconds
    setInterval(updateCharts, 30000);
});
</script>
{% endblock %}