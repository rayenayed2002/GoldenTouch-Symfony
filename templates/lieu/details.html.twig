            document.addEventListener('DOMContentLoaded', function() {
                const apiKey = 'f43d95965f40837e335d9584';
                const priceElement = document.getElementById('lieu-price');
                const currencySelector = document.getElementById('currency-selector');
                let basePrice = parseFloat(priceElement.getAttribute('data-base-price'));
                let rates = { EUR: 1, TND: null, USD: null };
        
                function updatePriceDisplay(currency) {
                    let converted = basePrice;
                    if (currency !== 'EUR' && rates[currency]) {
                        converted = basePrice * rates[currency];
                    }
                    let symbol = currency === 'EUR' ? '€' : (currency === 'USD' ? '$' : 'TND');
                    priceElement.textContent = converted.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}) + ' ' + symbol;
                }
        
                function fetchRates() {
                    fetch(`https://v6.exchangerate-api.com/v6/${apiKey}/latest/EUR`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.result === 'success') {
                                rates.USD = data.conversion_rates.USD;
                                rates.TND = data.conversion_rates.TND;
                            }
                        })
                        .catch(() => {});
                }
        
                currencySelector.addEventListener('change', function() {
                    const selected = this.value;
                    if (selected === 'EUR' || (rates[selected] && rates[selected] !== null)) {
                        updatePriceDisplay(selected);
                    } else {
                        fetchRates();
                        setTimeout(() => updatePriceDisplay(selected), 500);
                    }
                });
        
                // Initial fetch for rates
                fetchRates();
            });
