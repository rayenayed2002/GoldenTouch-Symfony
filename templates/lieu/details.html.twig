function validateDate(input) {
    const selectedDate = new Date(input.value);
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    
    if (selectedDate < today) {
        input.setCustomValidity('La date ne peut pas être dans le passé');
        input.classList.add('is-invalid');
    } else {
        input.setCustomValidity('');
        input.classList.remove('is-invalid');
    }
}

function validateCapacity(input, maxCapacity) {
    const value = parseInt(input.value);
    
    if (isNaN(value) {
        input.setCustomValidity('Veuillez entrer un nombre valide');
        input.classList.add('is-invalid');
    } else if (value < 1 || value > maxCapacity) {
        input.setCustomValidity(`Le nombre doit être entre 1 et ${maxCapacity}`);
        input.classList.add('is-invalid');
    } else {
        input.setCustomValidity('');
        input.classList.remove('is-invalid');
    }
}

