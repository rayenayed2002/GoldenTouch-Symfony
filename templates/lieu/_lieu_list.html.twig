{% for lieu in lieux.results %}
<div class="col-md-4 mb-4">
    <div class="lieu-card">
        {% if lieu.imageUrl %}
            <img src="uploads/lieux/{{ lieu.imageUrl }}" alt="{{ lieu.name }}" class="lieu-image">
        {% endif %}
        <div class="lieu-content">
            <h3 class="lieu-title">{{ lieu.name }}</h3>
            <div class="lieu-category">{{ lieu.category }}</div>
            <div class="lieu-location">
                <i class="fas fa-map-marker-alt"></i> {{ lieu.location }}
            </div>
            <p class="lieu-description">{{ lieu.description }}</p>
            <div class="lieu-meta">
                <div class="lieu-capacity">
                    <i class="fas fa-users"></i> {{ lieu.capacity }} personnes
                </div>
                <div class="lieu-price">{{ lieu.price }}€</div>
            </div>
            <div class="lieu-actions mt-3">
                <a href="{{ path('app_lieu_details', {id: lieu.id}) }}" class="btn btn-primary btn-sm">Voir détails</a>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% if lieux.pages > 1 %}
<div class="col-12">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {% if lieux.hasPreviousPage %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_lieux', {page: lieux.currentPage - 1}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% endif %}
            
            {% for i in 1..lieux.pages %}
                <li class="page-item {{ i == lieux.currentPage ? 'active' : '' }}">
                    <a class="page-link" href="{{ path('app_lieux', {page: i}) }}">{{ i }}</a>
                </li>
            {% endfor %}
            
            {% if lieux.hasNextPage %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_lieux', {page: lieux.currentPage + 1}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</div>
{% endif %}