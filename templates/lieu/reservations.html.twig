{% extends 'base-front.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
<div class="breadcumb-wrapper" data-bg-src="{{ asset('Front/img/breadcumb/breadcumb-bg.jpg') }}">
    <div class="container">
        <div class="breadcumb-content">
            <h1 class="breadcumb-title">Mes Réservations</h1>
            <ul class="breadcumb-menu">
                <li><a href="{{ path('front_index') }}">Accueil</a></li>
                <li>Mes Réservations</li>
            </ul>
        </div>
    </div>
</div>

<div class="container my-5">
    {% if reservations|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Lieu</th>
                        <th>Date de réservation</th>
                        <th>Statut</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>
                            <a href="{{ path('app_lieu_details', {'id': reservation.lieu.id}) }}" class="text-decoration-none">
                                {{ reservation.lieu.name }}
                            </a>
                        </td>
                        <td>{{ reservation.dateReservation|date('d/m/Y H:i') }}</td>
                        <td>
                            <span class="badge 
                                {% if reservation.status == 'confirmed' %}bg-success
                                {% elseif reservation.status == 'pending' %}bg-warning
                                {% else %}bg-danger
                                {% endif %}">
                                {{ reservation.status|trans }}
                            </span>
                        </td>
                        <td>{{ reservation.lieu.price }} €</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_lieu_details', {'id': reservation.lieu.id}) }}" 
                                   class="btn btn-sm btn-primary" 
                                   title="Voir les détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                
                                {% if reservation.status == 'pending' %}
                                    <form method="post" 
                                          action="{{ path('app_reservation_cancel', {'id': reservation.id}) }}" 
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette réservation ?')"
                                          class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Annuler">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                {% endif %}
                                
                                <a href="https://calendar.google.com/calendar/render?action=TEMPLATE&text={{ reservation.lieu.name|url_encode }}&dates={{ reservation.dateReservation|date('Ymd\THis') }}/{{ reservation.dateReservation|date_modify('+1 hour')|date('Ymd\THis') }}&details=Réservation du lieu: {{ reservation.lieu.name|url_encode }}" 
                                   class="btn btn-sm btn-info" 
                                   target="_blank"
                                   title="Ajouter à Google Calendar">
                                    <i class="fab fa-google"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
        {# Pagination #}
        {% if pages > 1 %}
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_user_reservations', {'page': currentPage - 1}) }}">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    {% endif %}
                    
                    {% for i in 1..pages %}
                        <li class="page-item {% if i == currentPage %}active{% endif %}">
                            <a class="page-link" href="{{ path('app_user_reservations', {'page': i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    
                    {% if currentPage < pages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_user_reservations', {'page': currentPage + 1}) }}">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    {% else %}
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>
            Vous n'avez aucune réservation pour le moment.
            <div class="mt-3">
                <a href="{{ path('app_lieu_index') }}" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Découvrir nos lieux
                </a>
            </div>
        </div>
    {% endif %}
</div>

<style>
    .table {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }
    
    .table thead th {
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .table tbody tr {
        transition: all 0.3s ease;
    }
    
    .table tbody tr:hover {
        background-color: rgba(255,193,7,0.05);
    }
    
    .badge {
        padding: 0.5em 0.75em;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
    }
    
    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }
    
    .pagination .page-link {
        color: #FFC107;
        border: none;
        margin: 0 2px;
        border-radius: 5px;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #FFC107;
        color: white;
    }
    
    .pagination .page-link:hover {
        background-color: rgba(255,193,7,0.1);
        color: #FFC107;
    }
</style>
{% endblock %} 