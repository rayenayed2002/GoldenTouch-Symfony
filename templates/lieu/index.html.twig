    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const orderbySelect = document.getElementById('orderbySelect');
        const priceRange = document.getElementById('priceRange');
        const priceValue = document.getElementById('priceValue');
        const lieuContainer = document.querySelector('.row.gy-40');
        const defaultImage = '{{ asset("Front/img/placeholder.jpg") }}';
        let debounceTimer;
    
        priceRange.addEventListener('input', function() {
            priceValue.textContent = this.value + '€';
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(performSearch, 300);
        });
    
        function performSearch() {
            const searchCriteria = {
                search: searchInput.value.trim(),
                orderby: orderbySelect.value,
                maxPrice: priceRange.value
            };
    
            // Supprimer les paramètres vides
            Object.keys(searchCriteria).forEach(key => {
                if (!searchCriteria[key]) {
                    delete searchCriteria[key];
                }
            });
    
            lieuContainer.innerHTML = '<div class="col-12 text-center py-5"><i class="fas fa-spinner fa-spin fa-2x"></i><p>Recherche en cours...</p></div>';
    
            fetch('{{ path("app_lieux") }}?' + new URLSearchParams(searchCriteria), {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                let html = '';
                if (data.results && data.results.length > 0) {
                    data.results.forEach(lieu => {
                        html += `
                            <div class="col-xl-4 col-sm-6">
                                <div class="th-product">
                                    <div class="product-img">
                                        <img src="${lieu.imageUrl ? '${window.location.origin}/' + lieu.imageUrl.replace('uploads/', '') : defaultImage}" 
                                             alt="${lieu.name}" 
                                             class="img-fluid">
                                        <div class="actions">
                                            <a href="/lieu/${lieu.id}" class="icon-btn" title="Voir les détails"><i class="far fa-eye"></i></a>
                                            <a href="/lieu/${lieu.id}/calendar" class="icon-btn" title="Voir le calendrier"><i class="far fa-calendar-alt"></i></a>
                                            <a href="#" class="icon-btn toggle-favori" data-lieu-id="${lieu.id}" title="Ajouter aux favoris"><i class="far fa-heart"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <h3 class="product-title"><a href="/lieu/${lieu.id}">${lieu.name}</a></h3>
                                        <div class="lieu-location">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <span>${lieu.location}${lieu.ville ? ', ' + lieu.ville : ''}</span>
                                        </div>
                                        <p class="lieu-description">${lieu.description || 'Aucune description disponible'}</p>
                                        <div class="product-meta">
                                            <span class="price">${lieu.price} €</span>
                                            <span class="lieu-capacity"><i class="fas fa-users"></i> ${lieu.capacity} personnes</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                } else {
                    html = '<div class="col-12 text-center"><div class="alert alert-info">Aucun lieu trouvé pour les critères sélectionnés.</div></div>';
                }
                lieuContainer.innerHTML = html;
            })
            .catch(error => {
                console.error('Erreur:', error);
                lieuContainer.innerHTML = '<div class="col-12 text-center"><div class="alert alert-danger">Une erreur est survenue lors de la recherche. Veuillez réessayer.</div></div>';
            });
        }

        // Gestion des événements avec debounce
        searchInput.addEventListener('input', function() {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(performSearch, 300);
        });

        orderbySelect.addEventListener('change', performSearch);

        // Gestion des favoris
        document.addEventListener('click', function(e) {
            if (e.target.closest('.toggle-favori')) {
                e.preventDefault();
                const lieuId = e.target.closest('.toggle-favori').dataset.lieuId;
                const heartIcon = e.target.closest('.toggle-favori').querySelector('i');
                const token = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                
                fetch(`/favoris/toggle/${lieuId}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/json',
                        'X-CSRF-TOKEN': token
                    },
                    credentials: 'same-origin'
                })
                .then(response => {
                    if (!response.ok) {
                        if (response.status === 401) {
                            window.location.href = '{{ path('app_login') }}';
                            throw new Error('Veuillez vous connecter pour gérer vos favoris');
                        }
                        throw new Error('Erreur réseau');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        heartIcon.classList.toggle('far');
                        heartIcon.classList.toggle('fas');
                        heartIcon.classList.toggle('text-danger');
                    } else {
                        throw new Error(data.error || 'Erreur lors de la gestion des favoris');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    alert(error.message || 'Une erreur est survenue lors de la gestion des favoris');
                });
            }
        });
    });
    </script>

