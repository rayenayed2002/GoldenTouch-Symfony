    <script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const categorySelect = document.getElementById('categorySelect');
    const orderbySelect = document.getElementById('orderbySelect');
    const lieuContainer = document.querySelector('.row.gy-40');
    const defaultImage = '{{ asset("Front/img/placeholder.jpg") }}';
    let debounceTimer;

    function performSearch() {
        const searchCriteria = {
            name: searchInput.value.trim(),
            category: categorySelect.value,
            orderby: orderbySelect.value
        };
        lieuContainer.innerHTML = '<div class="col-12 text-center py-5"><i class="fas fa-spinner fa-spin fa-2x"></i><p>Recherche en cours...</p></div>';
        fetch('{{ path("app_lieu_search_autocomplete") }}?' + new URLSearchParams(searchCriteria), {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if(data.length > 0) {
                lieuContainer.innerHTML = data.map(lieu => `
                    <div class="col-xl-4 col-sm-6">
                        <div class="lieu-card">
                            <div class="product-img">
                                <img src="${lieu.image ?  lieu.image : defaultImage}" alt="${lieu.name}" class="lieu-image">
                                <div class="actions">
                                    <a href="${lieu.url}" class="icon-btn" title="Voir les détails"><i class="far fa-eye"></i></a>
                                    <a href="#" class="icon-btn toggle-favori" data-lieu-id="${lieu.id}" title="Ajouter aux favoris"><i class="far fa-heart"></i></a>
                                </div>
                            </div>
                            <div class="lieu-content">
                                ${lieu.category ? <span class=\"lieu-category\">${lieu.category}</span> : ''}
                                <h3 class="lieu-title"><a href="${lieu.url}">${lieu.name}</a></h3>
                                <div class="lieu-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>${lieu.location || ''}</span>
                                </div>
                                <p class="lieu-description">${lieu.description || 'Aucune description disponible'}</p>
                                <div class="lieu-meta">
                                    <span class="price">${lieu.price} €</span>
                                    <span class="lieu-capacity"><i class="fas fa-users"></i> ${lieu.capacity} personnes</span>
                                </div>
                            </div>
                        </div>
                    </div>
                `).join('');
            } else {
                lieuContainer.innerHTML = '<div class="col-12 text-center py-5"><div class="alert alert-info">Aucun lieu trouvé.</div></div>';
            }
        })
        .catch(() => {
            lieuContainer.innerHTML = '<div class="col-12 text-center py-5"><div class="alert alert-danger">Erreur lors de la recherche.</div></div>';
        });
    }

    searchInput.addEventListener('input', function() {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(performSearch, 400);
    });
    categorySelect.addEventListener('change', performSearch);
    orderbySelect.addEventListener('change', performSearch);
});
</script>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        let debounceTimer;
    
        searchInput.addEventListener('input', function() {
            clearTimeout(debounceTimer);
            const query = this.value.trim();
    
            // Afficher l'indicateur de chargement
            searchResults.style.display = 'block';
            searchResults.innerHTML = '<div class="search-loading"><i class="fas fa-spinner fa-spin"></i> Recherche en cours...</div>';
    
            debounceTimer = setTimeout(() => {
                if (query.length > 0) {
                    // Effectuer la requête AJAX
                    fetch(/lieu/search?q=${encodeURIComponent(query)}, {
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.text())
                    .then(html => {
                        const container = document.querySelector('.row.gy-40');
                        if (container) {
                            container.innerHTML = html;
                        }
                        searchResults.style.display = 'none';
                    })
                    .catch(error => {
                        searchResults.innerHTML = '<div class="no-results">Une erreur est survenue lors de la recherche.</div>';
                        console.error('Erreur:', error);
                    });
                } else {
                    searchResults.style.display = 'none';
                    // Recharger tous les lieux
                    fetch('/lieu/search', {
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.text())
                    .then(html => {
                        const container = document.querySelector('.row.gy-40');
                        if (container) {
                            container.innerHTML = html;
                        }
                    });
                }
            }, 300);
        });
    
        // Fermer les résultats de recherche lors du clic en dehors
        document.addEventListener('click', function(e) {
            if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
                searchResults.style.display = 'none';
            }
        });
    });
    </script>
