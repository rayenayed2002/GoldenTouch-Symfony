<div class="row g-4">
    {% for materiel in materiels %}
        <div class="col-xl-4 col-lg-6 col-md-6">
            <a href="{{ path('app_materiels_show', {'id': materiel.idMat}) }}" class="text-decoration-none text-dark">
                <div class="card pack-card h-100">
                    <div class="card-body">
                        <div class="pack-image-wrapper mb-3">
                            <img src="{{ asset('uploads/materiels/' ~ materiel.photoMat|default('default.jpg')) }}" 
                                 class="pack-image" 
                                 alt="{{ materiel.nomMat }}">
                        </div>
                        <div class="pack-content">
                            <h5 class="pack-title mb-1">{{ materiel.nomMat }}</h5>
                            <p class="pack-description mb-3">
                                {{ materiel.descriptionMat|default('No description available.')|slice(0, 100) }}...
                            </p>
                            <div class="pack-details">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">Prix</h6>
                                    <h6 class="mb-0 text-primary">
                                        {{ materiel.prixMat|number_format(2, '.', ',') }} TND
                                    </h6>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">Quantité</h6>
                                    <span>{{ materiel.quantiteMat }} unités</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {% else %}
        <div class="col-12">
            <div class="alert alert-info">Aucun matériel trouvé.</div>
        </div>
    {% endfor %}
</div>