<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('search-form');
    const searchInput = document.getElementById('search-input');
    const orderSelect = document.querySelector('.orderby');
    const materielsContainer = document.getElementById('materiels-container');
    const loadingSpinner = document.querySelector('.loading-spinner');

    function loadResults(params = {}) {
        loadingSpinner.classList.remove('d-none');
        
        const url = new URL(window.location.href);
        Object.entries(params).forEach(([key, value]) => {
            if (value) url.searchParams.set(key, value);
        });

        fetch(url, {
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(response => response.text())
        .then(html => {
            materielsContainer.innerHTML = html;
            loadingSpinner.classList.add('d-none');
        })
        .catch(error => {
            console.error('Error:', error);
            loadingSpinner.classList.add('d-none');
            materielsContainer.innerHTML = `
                <div class="col-12">
                    <div class="alert alert-danger">Erreur lors du chargement</div>
                </div>
            `;
        });
    }

    // Gestion de la recherche
    searchForm.addEventListener('submit', function(e) {
        e.preventDefault();
        loadResults({
            search: searchInput.value,
            orderby: orderSelect.value
        });
    });

    // Gestion du tri
    orderSelect.addEventListener('change', function() {
        loadResults({
            search: searchInput.value,
            orderby: this.value
        });
    });
});
</script>
