            from.textContent = values[0] + ' TND';
            to.textContent = values[1] + ' TND';
        });

        document.querySelector('.button').addEventListener('click', function () {
            var minPrice = priceSlider.noUiSlider.get()[0];
            var maxPrice = priceSlider.noUiSlider.get()[1];

            // Mise à jour de l'URL avec les nouveaux paramètres
            var url = new URL(window.location.href);
            url.searchParams.set('minPrice', minPrice);
            url.searchParams.set('maxPrice', maxPrice);
            window.location.href = url.toString();  // Redirection avec les filtres appliqués
        });
    }
});

