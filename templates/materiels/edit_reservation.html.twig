<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.delete-form').forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            if (confirm('Are you sure you want to delete this event?')) {
                const formElement = this;
                fetch(formElement.action, {
                    method: 'POST',
                    body: new FormData(formElement)
                })
                .then(response => {
                    if (response.ok) return response.json();
                    throw new Error('Network error');
                })
                .then(data => {
                    if (data.success) {
                        const eventCard = formElement.closest('.col-xl-4.col-sm-6');
                        eventCard.remove();

                        // Update results count
                        const remaining = document.querySelectorAll('.col-xl-4.col-sm-6').length;
                        document.querySelector('.woocommerce-result-count').textContent = 
                            `Showing ${remaining} results`;

                        // Handle empty state
                        if (remaining === 0) {
                            document.querySelector('.row.gy-40').innerHTML = `
                                <div class="col-12">
                                    <div class="alert alert-info">No events found</div>
                                </div>`;
                        }
                    } else {
                        alert('Deletion failed');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Deletion failed - please try again');
                });
            }
        });
    });
});
</script>