    <style>
        .pack-card {
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            margin-bottom: 30px;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            border-radius: 16px;
