    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser le slider de prix
        const priceSlider = document.querySelector('.price_slider');
        if (priceSlider) {
            noUiSlider.create(priceSlider, {
                start: [0, 10000],
                connect: true,
                range: {
                    'min': 0,
                    'max': 10000
                },
                format: {
                    to: function(value) {
                        return Math.round(value) + '‚Ç¨';
                    },
                    from: function(value) {
                        return Number(value.replace('‚Ç¨', ''));
                    }
                }
            });

            const fromSpan = document.querySelector('.price_label .from');
            const toSpan = document.querySelector('.price_label .to');

            priceSlider.noUiSlider.on('update', function(values, handle) {
                if (handle === 0) {
                    fromSpan.textContent = values[handle];
                } else {
                    toSpan.textContent = values[handle];
                }
                // Mettre √† jour dynamiquement le label max si besoin
                if (toSpan) {
                    toSpan.textContent = values[1];
                }
            });
        }

        // Fonction pour charger les packs filtr√©s
        function loadFilteredPacks(selectedCategory = null) {
            let category = selectedCategory !== null ? selectedCategory : document.querySelector('.orderby').value;
            if (category === 'menu_order') {
                category = 'all';
            }
            const priceValues = priceSlider ? priceSlider.noUiSlider.get() : [0, 10000];
            const minPrice = parseFloat(priceValues[0]);
            const maxPrice = parseFloat(priceValues[1]);
            fetch(`/api/packs/filter?category=${encodeURIComponent(category)}&minPrice=${minPrice}&maxPrice=${maxPrice}`)
                .then(response => response.json())
                .then(data => {
                    // Mettre √† jour la grille des packs
                    const packsGrid = document.querySelector('.row.gy-40');
                    if (!data.packs || data.packs.length === 0) {
                        packsGrid.innerHTML = `<div class="col-12"><div class="alert alert-warning">Aucun pack trouv√© pour votre recherche.</div></div>`;
                    } else {
                        packsGrid.innerHTML = data.packs.map(pack => `
                            <div class="col-xl-4 col-sm-6">
                                <div class="th-product">
                                    <div class="product-img">
                                        <img src="${pack.photo ? '/uploads/packs/' + pack.photo : '/Front/img/placeholder.jpg'}" alt="${pack.nom}">
                                        <div class="actions">
                                            <a href="/pack/shop/${pack.id}" class="icon-btn"><i class="far fa-eye"></i></a>
                                            <a href="/pack/book/${pack.id}" class="icon-btn"><i class="far fa-cart-plus"></i></a>
                                            <a href="#" class="icon-btn"><i class="far fa-heart"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <div class="star-rating" role="img" aria-label="Not√© 5.00 sur 5">
                                            <span>Note : <strong class="rating">5.00</strong>/5</span>
                                        </div>
                                        <h3 class="product-title"><a href="/pack/shop/${pack.id}">${pack.nom}</a></h3>
                                        <div class="pack-meta">
                                            <span class="price">${pack.prix}&nbsp;‚Ç¨</span>
                                            <span class="pack-capacity"><i class="fas fa-users"></i> ${pack.capacite} personnes</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `).join('');
                    }

                    // Mettre √† jour la liste des cat√©gories dans la sidebar
                    const categoriesList = document.querySelector('.widget_categories ul');
                    if (categoriesList) {
                        categoriesList.innerHTML = '';
                        if (data.categories && data.categories.length > 0) {
                            data.categories.forEach(cat => {
                                const count = data.packs.filter(pack => pack.categorie === cat.categorie).length;
                                const li = document.createElement('li');
                                li.innerHTML = `<a href="#" class="category-filter" data-category="${cat.categorie}">${cat.categorie}</a> <span>(${count})</span>`;
                                categoriesList.appendChild(li);
                            });
                        } else {
                            categoriesList.innerHTML = '<li><span>Aucune cat√©gorie trouv√©e</span></li>';
                        }
                    }
                });
        }

        // √âv√©nements pour les filtres
        document.querySelector('.orderby').addEventListener('change', () => loadFilteredPacks());
        if (priceSlider) {
            priceSlider.noUiSlider.on('change', () => loadFilteredPacks());
        }
        document.querySelector('.widget_price_filter .button').addEventListener('click', function(e) {
            e.preventDefault();
            loadFilteredPacks();
        });
        // Gestion du clic sur une cat√©gorie dans la sidebar
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('category-filter')) {
                e.preventDefault();
                const selectedCategory = e.target.getAttribute('data-category');
                loadFilteredPacks(selectedCategory);
                // Met √† jour l'√©tat visuel des cat√©gories s√©lectionn√©es
                document.querySelectorAll('.category-filter').forEach(link => link.classList.remove('active'));
                e.target.classList.add('active');
            }
        });
        document.querySelectorAll('.tagcloud a').forEach(tag => {
            tag.addEventListener('click', function(e) {
                e.preventDefault();
                this.classList.toggle('active');
                loadFilteredPacks();
            });
        });

        // Charger les filtres initiaux
        loadFilteredPacks();
    });
    </script>
