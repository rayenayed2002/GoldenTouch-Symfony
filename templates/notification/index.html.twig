{% block stylesheets %}
{{ parent() }}
<style>
    .notification-card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

    .notification-card:hover {
        transform: translateY(-2px);
    }

    .notification-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    .notification-timestamp {
        font-size: 0.875rem;
        color: #6e7a81;
    }

    .notification-body {
        color: #4e5d6c;
    }
</style>
{% endblock %}

